{
  "name": "AI SCRUM",
  "description": "AI Scrum bot integration inside Google Meet.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://meet.google.com/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["popup.js", "content.js"],
      "css": ["popup.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["https://meet.google.com/*"]
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
